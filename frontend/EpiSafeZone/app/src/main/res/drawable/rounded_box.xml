<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color=
        "@color/epiBlackBox" />

    <!-- Gradiente de colores -->
    <gradient
        android:startColor="@color/epiBlackBox"
        android:endColor="#00000000"
        android:angle="0" />

    <!-- Bordes redondeados -->
    <corners android:radius="20dp" />

    <!-- Borde de la caja -->
    <stroke
        android:width="2dp"
        android:color="@color/epiBlackBoxMargin" />
</shape>