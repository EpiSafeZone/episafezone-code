<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/epiBlackBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/stepContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/epiBlackBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/stepsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1: DescripciÃ³n del paso"
            android:textSize="20sp"
            android:textColor="@color/epiWhite"
            android:lineSpacingExtra="8dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
